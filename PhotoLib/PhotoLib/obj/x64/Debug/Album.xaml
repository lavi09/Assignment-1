<Page x:ConnectionId='1'
    x:Class="PhotoLib.Album"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Button x:ConnectionId='6' Name="Back" Content="Back"                      HorizontalAlignment="Left" Height="92" Margin="10,0,0,0" VerticalAlignment="Center" /> 
        </StackPanel>
        <StackPanel>
            <GridView x:ConnectionId='2'  Name="AlbumImagesGridview"                                      IsItemClickEnabled="True"                                          >

            <GridView.ItemTemplate >
                <DataTemplate                          >
                    <StackPanel x:ConnectionId='3'  Margin ="10" Name="Display">
                        <Image x:ConnectionId='4' Name="AlbumImage" Margin="6" Width="150" Height="150"                              Stretch="Fill" IsTapEnabled="True"                            >
                            <FlyoutBase.AttachedFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem x:ConnectionId='5' Text="Add" Icon="Add"                             >
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </FlyoutBase.AttachedFlyout>

                        </Image>
                        <TextBlock TextAlignment="Center" FontSize="14"  Text="{Binding Name}" TextWrapping="Wrap" FontWeight="SemiBold"></TextBlock>

                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        </StackPanel>
    </Grid>
</Page>

